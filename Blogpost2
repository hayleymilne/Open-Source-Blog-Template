	<script type="text/javascript">
	/* This function Sets the time for each blog post*/
	function timeStamp(year,month,day,hour,min,sec)
	{
		var time= new Date();
		time.setFullYear(year,month,day);
		time.setHours(hour,min,sec);
		document.write(time);
	}
</script>
