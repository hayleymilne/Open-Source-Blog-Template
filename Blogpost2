					document.write("Time for sleep isn't?")
				}
				if (hours>18||hours==0){
					document.write("Have a lovely night")
				}
				if (hours==5||hours==6||hours==7||hours==8||hours==9||hours==10||hours==11) {
					document.write("Good Morning")
				}
				if (hours==12||hours==13||hours==14||hours==15||hours==16||hours==17||hours==18){
					document.write("Good Afternoon")
